{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "npm run storybook",
            "request": "launch",
            "runtimeArgs": [
                "run-script",
                "sb"
            ],
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node",
            "cwd": "${workspaceFolder}/packages/scandipwa"
        },
        {
            "name": "Attach to Chrome",
            "port": 9222,
            "request": "attach",
            "type": "pwa-chrome",
            "webRoot": "${workspaceFolder}/packages/scandipwa/"
        },
        {
            "command": "npm start",
            "name": "Run npm start",
            "request": "launch",
            "type": "node-terminal",
            "env": {
                "BROWSER": "none"
            },
            "cwd": "${workspaceFolder}/packages/scandipwa"
        },
        {
            "command": "npm run build",
            "name": "Run npm build",
            "request": "launch",
            "type": "node-terminal",
            "env": {
                "BROWSER": "none"
            },
            "cwd": "${workspaceFolder}/packages/scandipwa"
        },
        {
            "command": "npm run build",
            "name": "Run npm build (MAGENTO)",
            "request": "launch",
            "type": "node-terminal",
            "env": {
                "BROWSER": "none",
                "BUILD_MODE": "magento"
            },
            "cwd": "${workspaceFolder}/packages/scandipwa"
        }
    ]
}
